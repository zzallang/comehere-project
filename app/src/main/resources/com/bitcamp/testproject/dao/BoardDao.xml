<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.testproject.dao.BoardDao">

  <resultMap type="boardJd" id="boardJdMap">
    <id column="bno" property="no"/>
    <result column="cateno" property="cateno"/>
    <result column="title" property="title"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="vw_cnt" property="viewCount"/>
  </resultMap>
  
  <resultMap type="boardCategory" id="categoryMap">
    <id column="cateno" property="cateno"/>
    <result column="name" property="category"/>
  </resultMap>
  
  <select id="findCateNo" resultMap="categoryMap">
    select 
      cateno 
    from 
      board_category 
    where 
      name=#{value}
  </select>
  
  <insert id="insertPost" parameterType="boardJd"
          useGeneratedKeys="true" keyColumn="bno" keyProperty="no">
    insert into board(cateno,mno,title,cont) 
    values(#{cateno},1,#{title},#{content})
  </insert>


</mapper>



