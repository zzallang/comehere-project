<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.testproject.dao.PartyDao">

  <resultMap type="party" id="partyMap">
    <id column="pno" property="no"/>
    <result column="rno" property="regionNo"/>
    <result column="sno" property="sprotsNo"/>
    <result column="title" property="title"/>
    <result column="act" property="active"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="headcnt" property="headCount"/>
    <result column="ptime" property="partyTime"/>
    <result column="pdate" property="partydate"/>

    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="user" javaType="member">
      <id column="mno" property="no"/>
      <result column="nick" property="nickname"/>
      <result column="bday" property="birthday"/>
      <result column="sex" property="sex"/>
      <result column="filepath" property="filepath"/>
    </association>

    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="party" javaType="party">
      <id column="pno" property="no"/>
    <result column="rno" property="regionNo"/>
    <result column="sno" property="sprotsNo"/>
    <result column="title" property="title"/>
    <result column="act" property="active"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="headcnt" property="headCount"/>
    <result column="ptime" property="partyTime"/>
    <result column="pdate" property="partydate"/>
    </association>




    
    <!-- 조인 결과에서 같은 모임에 대해 모임 참여자 명단 데이터를 담을 경우 -->
    <collection property="partyMembers" ofType="PartyMember">
      <id column="mno" property="user"/>
      <id column="pno" property="party"/>
      <result column="psno" property="partyStatusNo"/>
      <result column="auth" property="auth"/>
    </collection>

    <!-- 조인 결과에서 같은 모임에 대해 여러 개의 댓글 데이터를 담을 경우 -->
    <collection property="partyComments" ofType="PartyComment">
      <id column="pcno" property="no"/>
      <result column="nick" property="writer"/>
      <result column="filepath" property="writer"/>
      <result column="pno" property="partyNo"/>
      <result column="cont" property="content"/>
      <result column="act" property="active"/>
      <result column="cdt" property="createdDate"/>
    </collection>
        
    <!-- 조인 결과에서 같은 모임에 대해 여러 개의 첨부 파일 데이터를 담을 경우 -->
    <collection property="partyAttachedFiles" ofType="PartyAttachedFile">
      <id column="pfno" property="no"/>
      <result column="filepath" property="filepath"/>
    </collection>
    
    <!-- 조인 결과에서 같은 모임에 대해 여러 개의 리뷰 데이터를 담을 경우 -->
    <collection property="partyReviews" ofType="PartyReview">
      <id column="prno" property="no"/>
      <result column="nick" property="writer"/>
      <result column="filepath" property="writer"/>
      <result column="pno" property="party"/>
      <result column="act" property="active"/>
      <result column="title" property="title"/>
      <result column="cont" property="content"/>
      <result column="star" property="star"/>
      <result column="cdt" property="createdDate"/>
    </collection>
    
    <!-- 조인 결과에서 같은 모임의 후기들에 대해 여러 개의 첨부 파일 데이터를 담을 경우 -->
    <collection property="partyReviewAttachedFiles" ofType="PartyReviewAttachedFile">
      <id column="prfno" property="no"/>
      <result column="filepath" property="filepath"/>
      <result column="prno" property="partyReviewNo"/>
    </collection>
    
  </resultMap>

  <resultMap type="PartyMember" id="partyMemberMap">
      <id column="mno" property="user"/>
      <id column="pno" property="party"/>
      <result column="psno" property="partyStatusNo"/>
      <result column="auth" property="auth"/>
      
    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="user" javaType="member">
      <id column="mno" property="no"/>
      <result column="nick" property="nickname"/>
      <result column="bday" property="birthday"/>
      <result column="sex" property="sex"/>
      <result column="filepath" property="filepath"/>
    </association>

    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="party" javaType="party">
      <id column="pno" property="no"/>
    <result column="rno" property="regionNo"/>
    <result column="sno" property="sprotsNo"/>
    <result column="title" property="title"/>
    <result column="act" property="active"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="headcnt" property="headCount"/>
    <result column="ptime" property="partyTime"/>
    <result column="pdate" property="partydate"/>
    </association>
      
    <!-- 조인 결과에서 같은 모임에 대해 여러 개의 리뷰 데이터를 담을 경우 -->
    <collection property="partyReviews" ofType="PartyReview">
      <id column="prno" property="no"/>
      <result column="nick" property="writer"/>
      <result column="filepath" property="writer"/>
      <result column="pno" property="party"/>
      <result column="act" property="active"/>
      <result column="title" property="title"/>
      <result column="cont" property="content"/>
      <result column="star" property="star"/>
      <result column="cdt" property="createdDate"/>
    </collection>
    <!-- 조인 결과에서 같은 모임의 후기들에 대해 여러 개의 첨부 파일 데이터를 담을 경우 -->
    <collection property="partyReviewAttachedFiles" ofType="PartyReviewAttachedFile">
      <id column="prfno" property="no"/>
      <result column="filepath" property="filepath"/>
      <result column="prno" property="partyReviewNo"/>
    </collection>
    
  </resultMap>
  
    <resultMap type="PartyComment" id="commentMap">
        <id column="pcno" property="no"/>
      <result column="mno" property="writer"/>
      <result column="pno" property="partyNo"/>
      <result column="cont" property="content"/>
      <result column="act" property="active"/>
      <result column="cdt" property="createdDate"/>
      
    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="writer" javaType="member">
      <id column="mno" property="no"/>
      <result column="nick" property="nickname"/>
      <result column="bday" property="birthday"/>
      <result column="sex" property="sex"/>
      <result column="filepath" property="filepath"/>
    </association>
      
  </resultMap>

  <resultMap type="partyAttachedFile" id="attachedFileMap">
    <id column="pfno" property="no"/>
    <result column="filepath" property="filepath"/>
    <result column="pno" property="partyNo"/>
  </resultMap>

  <resultMap type="partyReview" id="partyReviewMap">
      <id column="prno" property="no"/>
      <result column="nick" property="writer"/>
      <result column="filepath" property="writer"/>
      <result column="pno" property="party"/>
      <result column="act" property="active"/>
      <result column="title" property="title"/>
      <result column="cont" property="content"/>
      <result column="star" property="star"/>
      <result column="cdt" property="createdDate"/>
      
          <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="writer" javaType="member">
      <id column="mno" property="no"/>
      <result column="nick" property="nickname"/>
      <result column="bday" property="birthday"/>
      <result column="sex" property="sex"/>
      <result column="filepath" property="filepath"/>
    </association>

    <!-- 조인 결과에서 같은 게시글에 대해 한 개의 회원 데이터를 담을 경우 -->
    <association property="party" javaType="party">
      <id column="pno" property="no"/>
    <result column="rno" property="regionNo"/>
    <result column="sno" property="sprotsNo"/>
    <result column="title" property="title"/>
    <result column="act" property="active"/>
    <result column="cont" property="content"/>
    <result column="cdt" property="createdDate"/>
    <result column="headcnt" property="headCount"/>
    <result column="ptime" property="partyTime"/>
    <result column="pdate" property="partydate"/>
    </association>
    
    <!-- 조인 결과에서 같은 모임의 후기들에 대해 여러 개의 첨부 파일 데이터를 담을 경우 -->
    <collection property="partyReviewAttachedFiles" ofType="PartyReviewAttachedFile">
      <id column="prfno" property="no"/>
      <result column="filepath" property="filepath"/>
    </collection>
    
  </resultMap>

  <resultMap type="partyReviewAttachedFile" id="reviewAttachedFileMap">
    <id column="prfno" property="no"/>
    <result column="filepath" property="filepath"/>
    <result column="prno" property="partyReviewNo"/>
  </resultMap>
  
  
  <select id="findAll" resultMap="partyMap">
    select
      b.bno,
      b.title,
      b.cdt,
      b.vw_cnt,
      m.mno,
      m.name
    from 
      board b
      join member m on b.mno = m.mno
    order by 
      bno desc
  </select>
  
    <select id="findByNo" resultMap="partyMap">
    select
      b.bno,
      b.title,
      b.cont,
      b.cdt,
      b.vw_cnt,
      m.mno,
      m.name,
      bf.bfno,
      bf.filepath
    from 
      app_board b
      join app_member m on b.mno = m.mno
      left outer join app_board_file bf on b.bno=bf.bno
    where 
      b.bno=#{value}
  </select>
  
  <select id="findFilesByBoard" resultMap="attachedFileMap">
    select 
      bfno, 
      filepath, 
      bno 
    from 
      app_board_file 
    where 
      bno = #{value}
  </select>

  <insert id="insert" parameterType="party"
          useGeneratedKeys="true" keyColumn="pno" keyProperty="no">
    insert into app_board(title,cont,mno) 
    values(#{title},#{content},#{writer.no})
  </insert>
  
  <update id="update" parameterType="party">
    update app_board set 
      title=#{title}, 
      cont=#{content} 
    where bno=#{no}
  </update>
  
  <delete id="delete">
    delete from app_board 
    where bno=#{value}
  </delete>

  <delete id="deleteByMember">
    delete from app_board 
    where mno=#{value}
  </delete>
  
  <insert id="insertFiles" parameterType="board">
    insert into app_board_file(filepath,bno) 
    values 
    <foreach collection="attachedFiles" item="file" separator=",">
      (#{file.filepath},#{no})
    </foreach>
  </insert>
  
  <delete id="deleteFiles">
    delete from app_board_file 
    where bno=#{value}
  </delete>
  
  <delete id="deleteFilesByMemberBoards">
    delete from app_board_file 
    where bno in (select bno from app_board where mno = #{value})
  </delete>
  
  <delete id="deleteFile">
    delete from app_board_file 
    where bfno=#{value}
  </delete>
  
  <select id="findFileByNo" resultMap="attachedFileMap">
    select 
      bfno, 
      filepath, 
      bno 
    from 
      app_board_file 
    where 
      bfno = #{value}
  </select>

</mapper>



